{
  "name": "@verida/storage-node",
  "version": "1.2.0",
  "description": "Verida Storage Node middleware that bridges decentralised identities so they can control access to databases within a CouchDB storage engine",
  "main": "dist/server.js",
  "scripts": {
    "tests": "mocha -mocha --require @babel/polyfill --require @babel/register './test/**/*.js'",
    "test": "mocha -mocha --require @babel/polyfill --require @babel/register ",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec babel-node src/server.js",
    "build": "yarn run clean && babel src -d dist --extensions .js",
    "serve": "node dist/server.js",
    "lambda-deploy": "yarn build && yarn claudia create --region us-east-2 --handler lambda.handler --deploy-proxy-api --no-optional-dependencies --set-env-from-json .env.prod.json",
    "lambda-update": "yarn build && yarn claudia update --set-env-from-json .env.prod.json",
    "lambda-pack": "yarn build && yarn claudia pack --no-optional-dependencies"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.json",
    "**/*.svg",
    "**/*.xml",
    "**/*.yml",
    "**/*.lock",
    "**/*.bnf",
    "**/*.map",
    ".nvmrc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verida/storage-node.git"
  },
  "author": "Verida",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/verida/storage-node/issues"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "homepage": "https://github.com/verida/storage-node/README.md",
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@verida/did-client": "^0.1.2",
    "aws-serverless-express": "^3.4.0",
    "@verida/encryption-utils": "^1.1.3",
    "cors": "^2.8.5",
    "did-resolver": "^3.1.0",
    "dotenv": "^8.2.0",
    "ethers": "^4.0.42",
    "express": "^4.17.1",
    "express-basic-auth": "git+https://github.com/Mozzler/express-basic-auth.git",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "nano": "^8.1.0",
    "rand-token": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/polyfill": "^7.8.0",
    "@babel/preset-env": "^7.7.7",
    "@verida/account-node": "^1.1.9",
    "axios": "^0.27.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.19.2",
    "claudia": "^5.14.1",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.14",
    "pouchdb": "^7.2.2",
    "prettier": "2.5.1"
  }
}
